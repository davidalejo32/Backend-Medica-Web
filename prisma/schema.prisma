// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Paciente {
  cedula           Int      @id
  nombre           String
  apellido         String
  fecha_nacimiento DateTime
  telefono         String
  Cita             Cita[]
}

model Doctor {
  idDoctor    Int    @id @default(autoincrement())
  nombre      String
  apellido    String
  consultorio Int
  correo      String
  Cita        Cita[]

  Especialidad               Especialidad? @relation(fields: [idEspecialidad], references: [idEspecialidad])
  idEspecialidad Int?
}

model Cita {
  idCita Int @id @default(autoincrement())

  Paciente       Paciente? @relation(fields: [pacienteCedula], references: [cedula])
  pacienteCedula Int?
  Doctor         Doctor?   @relation(fields: [doctorIdDoctor], references: [idDoctor])
  doctorIdDoctor Int?
}

model Especialidad {
  idEspecialidad Int      @id @default(autoincrement())
  nombre         String
  Doctor         Doctor[]
}
